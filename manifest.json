{
  "manifest_version": 3,
  "name": "Atenea Dark Mode (UPC)",
  "version": "2.2",
  "description": "Dark mode para Atenea UPC",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://atenea.upc.edu/*"],
      "js": ["preload.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["*://atenea.upc.edu/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png", "logo-upc.png"],
      "matches": ["*://atenea.upc.edu/*"]
    }
  ]
}